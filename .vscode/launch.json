    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Debug) (GUI) Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceRoot}/debug/SyncGUI",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
        },
        {
            "name": "(Debug) (GUI) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/debug/SyncGUI",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/debug",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(Release) (GUI) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/SyncGUI",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/build",
            "environment": [],
            "externalConsole": false,
        },
        {
            "name": "(Debug) (CLI) Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceRoot}/debug/SyncCLI",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
        },
        {
            "name": "(Debug) (CLI) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/debug/SyncCLI",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(Release) (CLI) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/SyncCLI",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": false,
        }
    ]
}
